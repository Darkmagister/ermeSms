# install all data files
bld.install_files("${DATADIR}/pixmaps", "moiosms.xpm")

# subst executable location
bld.new_task_gen(
	"subst",
	source = "moiosms.desktop.in",
	target = "moiosms.desktop",
	install_path = "${DATADIR}/applications",
	chmod = 0755,
	dict = {"MOIOSMS": bld.env["MOIOSMS"]}
)

bld.add_group()

